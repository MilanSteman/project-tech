{% extends "layouts/layout.njk" %}
{% block content %}
  <header class='home-header'>
    <p>{{profile.message}}</p>
    <a href='/profile'>
      <img src={{profile.picture}}>
    </a>
  </header>

  <!-- Recommended users -->
  {% if users.length > 0 %}
    <section class='show-users'>
      <h1>Aanbevolen voor jou</h1>
      <ul class='user-list'>
        {% for user in users %}
          <!-- User Card -->
          <li>
            <a href='/'>
              <img src={{user.picture}}>
              <h3>{{user.username}}</h3>
              <p>{{user.description}}</p>

              <!-- List of games -->
              <ul>
                {% for game in user.games %}
                  <li>{{game}}</li>
                {% endfor %}
              </ul>
            </a>
          </li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}
{% endblock %}